{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/blackbox-exporter/configure-module-input.json",
    "description": "Configure blackbox-exporter",
    "examples": [
        {
            "path": "/blackbox-exporter"
        }
    ],
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "description": "The URL path to route requests to the blackbox-exporter service",
